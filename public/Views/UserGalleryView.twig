{% include 'Layouts.twig' %}

<div class="bg-indigo-400 flex flex-wrap py-5 px-5">
    <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex row-wrap">
            <form action="" method="post" enctype="multipart/form-data">
                <input type="file" name="fileToUpload" id="fileToUpload"
                       class="text-sm bg-gray-200 appearance-none rounded  py-2 px-3 text-gray-700 mb-1 leading-tight focus:outline-none focus:shadow-outline h-10"
                       required/>
                <input
                        class="text-sm appearance-none rounded  py-2 px-3 text-gray-700 bg-gray-200 leading-tight focus:outline-none focus:shadow-outline h-10"
                        name="upload" type="submit" value="Upload image" />
                <p>{{ message }}</p>
            </form>
        </div>
    </div>



    <div class="container mx-auto px-2">
        <form method="post">
            <section class="py-10 px-20 bg-indigo-400">
                <p class="text-5xl text-center text-gray-700 font-bold"></p>
                <div class="flex flex-wrap -mx-4 -mb-4">

                    {% for photo in gallery %}

                        <div class="md:w-1/5 px-3 my-3 ">
                            <div class="bg-white shadow p-4 rounded lg:w-64 mx-6">

                                <div class="flex justify-center mt-4 text-xs">
                                    <img class="h-auto"
                                         src="/gallery/{{ photo}}"
                                         alt="{{ photo}}"/>
                                </div>

                            </div>
                        </div>

                    {% endfor %}

                </div>
            </section>
        </form>
    </div>
</div>


