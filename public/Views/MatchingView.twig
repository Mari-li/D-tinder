{% include'Layouts.twig' %}

<head>
    <title>Tinder: Matching</title>

    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">

    <script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro|Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        button.like {
            width: 30px;
            height: 30px;
            margin: 0 auto;
            line-heigth: 50px;
            border-radius: 50%;
            color: rebeccapurple;
            font-size: 20px;
        }

        button.dislike {
            width: 30px;
            height: 30px;
            margin: 0 auto;
            line-heigth: 50px;
            border-radius: 50%;
            color: rebeccapurple;
            font-size: 20px;
        }

    </style>
</head>

<body style="font-family:Roboto,sans-serif">
<div class="flex justify-center items-center h-screen md:-mx-4 bg-indigo-300">
    <div class="w-full h-4/5 bg-indigo-300">
        <div class="swiper-container w-1/3 h-full bg-indigo-300 md:container md:mx-auto">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
                <!-- Slides -->

                {% for photo in photos %}
                    <div class="swiper-slide h-80 ">
                        <p class="text-center text-3xl text-indigo-800 font-semibold">Username</p>
                        <div class="text-center text-2xl ">
                        <form method="post" action="photo/{{ id }}">
                            <button name="dislike" value="{{ photo }}" class="dislike">
                                <i class="fa fa-thumbs-o-down" aria-hidden="true"></i>
                            </button>

                            <button class="like" name="like" value="{{ photo }}">
                                <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                            </button>

                        </form>
                        </div>
                            <img src="/gallery/{{ photo }}"
                                 class="object-cover w-auto h-3/4 max-w-sm mx-auto p-6 bg-white justify-center">
                        </div>

                {% endfor %}


            </div>
            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>
        </div>
    </div>
</div>
<script>
    var mySwiper = new Swiper('.swiper-container', {
        // Optional parameters
        direction: 'horizontal',
        loop: true,

        // If we need pagination
        pagination: {
            el: '.swiper-pagination',
        },

        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },

        // And if we need scrollbar
        scrollbar: {
            el: '.swiper-scrollbar',
        },
    })
</script>
</body>

</html>